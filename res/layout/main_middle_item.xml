<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_main_middle" 
    android:clickable="true">

    <TextView
        android:id="@+id/tv_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_imcome"
        android:layout_alignRight="@+id/tv_imcome"
        android:layout_below="@+id/tv_today"
        android:paddingBottom="7dip"
        android:paddingRight="7dip"
        android:text="¥ 0.00"
        android:gravity="right"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/tv_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="7dip"
        android:text="本周"
        android:textColor="#333333"
        android:textStyle="bold"
        android:textSize="20dip"/>

    <TextView
        android:id="@+id/tv_imcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_expense"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tv_today"
        android:paddingRight="7dip"
        android:gravity="right"
        android:singleLine="true"
        android:text="¥ 0.00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/green" />

</RelativeLayout>

