<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oringe_string" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="true" >
        <ImageButton
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:padding="10dp"
            android:clickable="false"
            android:duplicateParentState="true"
            android:src="@drawable/selector_actionbar_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="小助手"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@drawable/color_actionbar_string_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <com.cp.suishouji.widgt.LineButton
            android:id="@+id/linebutton1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_trans"
            android:textSize="19sp"
            android:textColor="@color/brownddd"
            android:text="助手" />

        <com.cp.suishouji.widgt.LineButton
            android:id="@+id/linebutton2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_trans"
            android:textSize="19sp"
            android:textColor="@color/brownddd"
            android:text="任务" />

        <com.cp.suishouji.widgt.LineButton
            android:id="@+id/linebutton3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_trans"
            android:textSize="19sp"
            android:textColor="@color/brownddd"
            android:text="热帖" />
    </LinearLayout>

</RelativeLayout>