<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOrEditTransActivity" >

    

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical" > 

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp" 
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/img_camera"
                        android:background="@drawable/gray_normal" />

                    <Button
                        android:id="@+id/btn_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/selector_btn_bg" />

                    <ImageView
                        android:id="@+id/img_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:clickable="true"
                        android:src="@drawable/selector_camera" />

                    <TextView
                        android:id="@+id/tv_calcuresult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textView2"
                        android:layout_alignRight="@+id/textView2"
                        android:paddingBottom="5dp"
                        android:text="0.00"
                        android:textColor="@color/green"
                        android:textSize="@dimen/calcdig" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_category"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/selector_btn_bg"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/gray_normal" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_category"
                        android:layout_alignBottom="@+id/tv_category"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="类别"
                        
                        style="@style/normaltext"/>

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="衣服饰品>衣服裤子"
                        style="@style/normaltext"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_account"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/selector_btn_bg"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/gray_normal" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="现金(CNY)"
                        style="@style/normaltext"/>

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_money"
                        android:layout_alignBottom="@+id/tv_money"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="账户"
                        style="@style/normaltext"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/gray_normal" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/textView5"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/gray_normal" />

                    <RelativeLayout
                        android:id="@+id/btn_buyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView6"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textView6"
                        android:background="@drawable/selector_btn_bg"
                        android:clickable="true" >

                        <TextView
                            android:id="@+id/tv_member"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="无成员"
                            style="@style/normaltext"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_tradetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView6"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/textView6"
                        android:background="@drawable/selector_btn_bg"
                        android:clickable="true" >

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="2014-06-03 06:33"
                            style="@style/normaltext"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/linearLayout1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="3dp"
                        android:layout_toLeftOf="@+id/textView7"
                        android:layout_weight="1"
                        android:background="@drawable/gray_normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/linearLayout1"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/textView7"
                        android:layout_weight="1"
                        android:background="@drawable/gray_normal" />

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/btn_item"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_bg"
                            style="@style/normaltext"
                            android:text="无项目" />

                        <Button
                            android:id="@+id/btn_location"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_bg"
                            style="@style/normaltext"
                            android:text="无商家/地点" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_ps"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginTop="-3dp"
                        android:layout_below="@+id/linearLayout1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/selector_btn_bg" />

                    <TextView
                        android:id="@+id/tv_ps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/textView7"
                        android:layout_marginLeft="10dp"
                        android:text="请输入备注信息"
                        style="@style/normaltext"/>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/linearLayout1"
                        android:layout_weight="1"
                        android:text="备注"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp" 
                    
                    >

                    <Button
                        android:id="@+id/btn_save01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_bg_oringe"
                        android:text="保存"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_save02"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_bg2"
                        android:text="保存模板"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_save03"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_bg2"
                        android:text="再记一笔"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
<FrameLayout
        android:id="@+id/frame_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        >
    </FrameLayout>
    <LinearLayout
        android:id="@+id/flowview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/frame1"
        android:visibility="invisible"
        android:orientation="vertical"
        >

        <!-- android:visibility="gone" -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Button"
                android:visibility="gone" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/button1"
                android:text="Button"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/oringe_string"
                android:background="@drawable/selector_btn_ok"
                android:text="OK"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
					android:background="#444444"
					android:layout_alignBottom="@+id/btn_ok"
					 />
            

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </FrameLayout>
    </LinearLayout>

</RelativeLayout>