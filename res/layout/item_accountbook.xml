<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_book"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/suite_bg_for_car" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_bookname"
        android:layout_below="@+id/tv_bookname"
        android:text="-未同步-"
        android:textColor="@color/white"
        android:textSize="11dip" />

    <ImageView
        android:id="@+id/img_choise"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/suite_selected_indicator2"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/operations_ly"
        android:layout_width="105dp"
        android:layout_height="114dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/main_scroll_operations_bg"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="invisible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/edit"
                android:layout_width="52.0dip"
                android:layout_height="38.0dip"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/suite_info_inner_edit_btn" />

            <ImageView
                android:id="@+id/pin"
                android:layout_width="52.0dip"
                android:layout_height="38.0dip"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/suite_info_inner_pin_btn" />
        </LinearLayout>

        <View
            android:layout_width="105.0dip"
            android:layout_height="2.0dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/main_scroll_operations_separate_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/delete"
                android:layout_width="52.0dip"
                android:layout_height="38.0dip"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/suite_info_inner_delete_btn" />

            <ImageView
                android:id="@+id/upgrade"
                android:layout_width="52.0dip"
                android:layout_height="38.0dip"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/suite_info_inner_upgrade_btn" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bookname"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/img_book"
        android:layout_alignTop="@+id/img_book"
        android:layout_marginRight="5dp"
        android:layout_marginTop="11dp"
        android:text="默认账本"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>